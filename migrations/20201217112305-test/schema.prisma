datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Calendar {
  accessRole String
  events     CalendarEvent[]
  id         String          @id @default(cuid())
  provider   String
  providerId String
  summary    String
  timeZone   String

  @@index([providerId])
}

model CalendarEvent {
  calendar   Calendar @relation(fields: [calendarId], references: [id])
  calendarId String
  end        DateTime
  id         String   @id @default(cuid())
  provider   String
  providerId String
  start      DateTime
  timeZone   String?

  @@index([providerId])
}
